#!/bin/bash

cd "$(dirname "$0")"

ret=0

echo -e "\e[33;1mwithmock\e[0m"
echo -e "========"
echo "=== withmock ===" > test.log
for f in */test.withmock; do
    d=$(dirname "$f")
    echo "--- ${d} ---" >> test.log
    echo -n "${d}: "
    (cd $d; ./test.withmock) >> test.log 2>&1
    if [ $? -ne 0 ]; then
        echo -e "\e[31;1mFAIL\e[0m"
        ret=1
    else
        echo -e "\e[32;1mPASS\e[0m"
    fi
done

echo

echo -e "\e[33;1mmocktest\e[0m"
echo -e "========"
echo "=== mocktest ===" >> test.log
for f in */test.mocktest; do
    d=$(dirname "$f")
    echo "--- ${d} ---" >> test.log
    echo -n "${d}: "
    (cd $d; ./test.mocktest) >> test.log 2>&1
    if [ $? -ne 0 ]; then
        echo -e "\e[31;1mFAIL\e[0m"
        ret=1
    else
        echo -e "\e[32;1mPASS\e[0m"
    fi
done

exit $ret
